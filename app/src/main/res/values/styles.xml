<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RobotoRegular_Blue_16">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="RobotoRegular_Blue_18">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="RobotoBold_Blue_22">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>


    <style name="RobotoBold_Blue_16">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="RobotoRegular_Black_18">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RobotoBold_Black_18">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RobotoRegular_Black_16">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RobotoItalic_Black_16">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    //alert dialog theme
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>
</resources>
